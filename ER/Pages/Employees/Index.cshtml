@page "{searchString?}"
@model ER.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Employees";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        <select asp-for="EmployeeProfession" asp-items="Model.ProfessionList">
            <option value="">All</option>
        </select>
        Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Specialists[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialists[0].Bio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialists[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialists[0].Profession)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Specialists[0].Image)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Specialists)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profession)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>*@
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
